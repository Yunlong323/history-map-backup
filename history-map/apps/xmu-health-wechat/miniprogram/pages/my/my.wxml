<!--pages/my/index.wxml-->
<view class="container">
    <view class="user-info">
    <block>
        <view class="headimage">
        <open-data type="userAvatarUrl"></open-data>
        </view>
    </block>
        <view class="usertext">
        <open-data type="userNickName"></open-data>
        </view>
    </view>
    <block>
      <view bindtap="showDetail" class="tapbar">
          <view class="item-avatar-xs">
            <image src="../../images/userinfo.png"/>
            <view style="padding-left:10px">
              <text wx:if="{{_isLogin == 1}}">个人信息  </text>
              <text wx:if="{{_isLogin == 1}}" style="font-size:15px">(My Info)</text>
              <text wx:if="{{_isLogin == 0}}">绑定账号  </text>
              <text wx:if="{{_isLogin == 0}}" style="font-size:15px">(Bind Account)</text>
            </view>
          </view>
          <text><text class="c-g"></text>></text>
      </view>
      <view bindtap="showTrack" class="tapbar">
          <view class="item-avatar-xs">
            <image src="../../images/track.png"/>
            <view style="padding-left:10px">
              <text>我的轨迹  </text>
              <text style="font-size:15px">(My Track)</text>
            </view>
          </view>
          <text><text class="c-g"></text>></text>
      </view>
      <!-- <view bindtap="showQRCode" class="tapbar">
          <view class="item-avatar-xs">
            <image src="../../images/QRCode.png"/>
            <view style="padding-left:10px">
              <text>我的二维码</text>
              <text style="font-size:15px">(My QR Code)</text>
            </view>
          </view>
          <text><text class="c-g"></text>></text>
      </view>
      <view bindtap="showVenue" class="tapbar">
          <view class="item-avatar-xs">
            <image src="../../images/venue.png"/>
            <view style="padding-left:10px">
              <text>我的场所</text>
              <text style="font-size:15px">(My Venue)</text>
            </view>
          </view>
          <text><text class="c-g"></text>></text>
      </view> -->
      <view bindtap="showAbout" class="tapbar">
          <view class="item-avatar-xs">
            <image src="../../images/about.png"/>
            <view style="padding-left:10px">
              <text>关于我们  </text>
              <text style="font-size:15px">(About Us)</text>
            </view>
          </view>
          <text><text class="c-g"></text>></text>
      </view>
    </block>
<!-- color:#000000;font-size:60rpx -->
    <view class="cu-modal  {{showModal==1?'show':''}}">
      <view class="cu-dialog">

        <view class="cu-bar">
          <view class="close-tip">{{venue_name}}</view>
        </view>

        <view class="bg-img">
          <!-- 绿码通过 -->
          <view wx:if='{{_pass==1}}' class='countDown-green-pass'>
            <text style='color:#fff;font-size:25px'>\n{{username}}\n{{userdept}}\n\n</text>
            <text style='color:#000000;font-size:25px;'>允许通过\n{{countDownNum}}s</text>
          </view>
          <!-- 黄码通过 -->
          <view wx:if='{{_pass==2}}' class='countDown-yello-pass'>
            <text style='color:#fff;font-size:25px'>\n{{username}}\n{{userdept}}\n\n</text>
            <text style='color:#000000;font-size:25px;'>{{countDownNum}}s</text>
          </view>
          <!-- 拒绝 -->
          <view wx:if='{{_pass==0}}' class='countDown-reject'>
            <text style='color:#fff;font-size:25px;'>\n{{username}}\n{{userdept}}\n\n</text>
            <text style='color:#000000;font-size:25px;'>禁止通过\n{{countDownNum}}s</text>
          </view>
        </view>

        <view class="cu-bar">
          <view class="close-tip" bindtap="hideModal">关闭</view>
        </view>
      </view>
    </view>

</view>



<mp-halfScreenDialog show="{{typeT}}">
  <view slot="title">登录方式</view>
  <!-- <view slot="desc">这是自定义描述区</view> -->
  <view slot="footer">
    <button type="primary" bindtap="xmu_login" class="weui-btn">厦大统一身份认证</button>
    <button type="primary" bindtap="staff_login" class="weui-btn">其他员工登录</button>
  </view>
</mp-halfScreenDialog>